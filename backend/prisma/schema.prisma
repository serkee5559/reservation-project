generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  reservations Reservation[]
}

model Reservation {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  seatNumber Int
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
